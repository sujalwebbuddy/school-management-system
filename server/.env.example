# Environment Variables for Platform Server
# Copy this file to .env and update the values for your environment

# Server Configuration
PORT=4000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/school-management

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Server Base URL (used for file uploads)
SERVER_BASE_URL=http://localhost:4000

# Email Configuration (for sending approval emails)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Default Assets
DEFAULT_PROFILE_IMAGE_URL=https://cdn3.iconfinder.com/data/icons/vector-icons-6/96/256-512.png

# Environment
NODE_ENV=development
