# =====================================================================
# SchoolHub Platform - Environment Variables Configuration
# =====================================================================
# Copy this file to .env and configure the values for your environment
# Never commit the .env file to version control
# =====================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=4000
NODE_ENV=development
SERVER_BASE_URL=http://localhost:4000

# -----------------------------------------------------------------------------
# Database Configuration (MongoDB)
# -----------------------------------------------------------------------------
MONGO_URI=mongodb://localhost:27017/school-management
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/school-management

# -----------------------------------------------------------------------------
# JWT Authentication
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# -----------------------------------------------------------------------------
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_characters

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# -----------------------------------------------------------------------------
# Default Assets
# -----------------------------------------------------------------------------
DEFAULT_PROFILE_IMAGE_URL=https://cdn3.iconfinder.com/data/icons/vector-icons-6/96/256-512.png

# -----------------------------------------------------------------------------
# AWS S3 Configuration (Required for file uploads)
# -----------------------------------------------------------------------------
# AWS Region where your S3 bucket is located (e.g., us-east-1, eu-west-1)
S3_REGION=us-east-1

# S3 Bucket Name for storing uploaded files
S3_BUCKET_NAME=your-bucket-name

# AWS Access Credentials (Optional if using IAM roles)
# If deploying on AWS EC2/ECS with IAM roles, these can be omitted
S3_ACCESS_KEY_ID=your_aws_access_key_id
S3_SECRET_ACCESS_KEY=your_aws_secret_access_key

